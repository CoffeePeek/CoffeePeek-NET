<Project Sdk="Microsoft.NET.Sdk.Worker">

    <PropertyGroup>
        <TargetFramework>net10.0</TargetFramework>
        <Nullable>enable</Nullable>
        <ImplicitUsings>enable</ImplicitUsings>
        <UserSecretsId>dotnet-OutboxBackgroundService-87b5ac71-f3a0-4dfd-b92f-588c1ab09387</UserSecretsId>
        <DockerDefaultTargetOS>Linux</DockerDefaultTargetOS>
    </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="Microsoft.Extensions.Hosting" Version="10.0.0"/>
    </ItemGroup>

    <ItemGroup>
      <Content Include="..\.dockerignore">
        <Link>.dockerignore</Link>
      </Content>
    </ItemGroup>

    <ItemGroup>
        <ProjectReference Include="..\CoffeePeek.AuthService\CoffeePeek.AuthService.csproj">
            <PublishContentFiles>false</PublishContentFiles>
        </ProjectReference>
    </ItemGroup>

    <ItemGroup>
        <Content Remove="..\CoffeePeek.AuthService\appsettings.json" />
        <Content Remove="..\CoffeePeek.AuthService\appsettings.Development.json" />
        <Content Remove="..\CoffeePeek.AuthService\appsettings.*.json" />
    </ItemGroup>

</Project>
